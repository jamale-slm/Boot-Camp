<%- include("partials/header"); -%>
    <h1>Home</h1>
    <p><%=HomeContent %></p>

    <% Posts.forEach(function(p){ %>
        <h1><%= p.Title %> </h1>
        
        <%body= p.Body%>
        <%if(body.length>10){ %>
            <%body=body.substring(0,100)+"..."%>
            <p><%= body %> <a href="/posts/<%= p.Title %>">Read More</a></p>
        <%} else{%>
            <p><%= body %></p>
        <%}%>
        
    <% }) %>

<%- include("partials/footer"); -%>
